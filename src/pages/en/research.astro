---
import Layout from "../../layouts/Layout.astro";
import Header from "../../components/Header.astro";
import { getCollection } from "astro:content";

// Texto para inglés
const t = {
  title: "Research",
  description: "Explore our ongoing research projects and publications",
  projects: "Research Projects",
  publications: "Publications",
  viewProject: "View Project",
  authors: "Authors",
  publishedIn: "Published in",
  status: {
    active: "Active",
    completed: "Completed",
    planned: "Planned",
  },
};

// Obtener proyectos de investigación en inglés
const researchProjects = await getCollection("research", ({ data }) => {
  return data.lang === "en";
});

// Process each project to use links defined in the metadata
const processedProjects = await Promise.all(
  researchProjects.map(async (project) => {
    // If the project has links defined in metadata, use them directly
    const definedLinks = Array.isArray(project.data.links)
      ? project.data.links
      : project.data.link
        ? [
            {
              url: project.data.link,
              text: project.data.linkText || t.viewProject,
            },
          ]
        : [];

    return {
      ...project,
      // Links are now defined in metadata as an array or as a single link
      externalLinks: definedLinks.length > 0 ? definedLinks : null,
    };
  })
);

// Obtener publicaciones en inglés
const publications = await getCollection("publications", ({ data }) => {
  return data.lang === "en";
});
---

<Layout title={`${t.title} | SIMG`}>
  <link
    rel="alternate"
    type="application/rss+xml"
    title="RSS Feed for SIMG Research"
    href="/en/rss.xml"
    slot="head"
  />
  <Header slot="header" />
  <main class="container">
    <section class="hero">
      <h1>{t.title}</h1>
      <p class="lead">{t.description}</p>
      <div class="rss-link">
        <a href="/en/rss.xml" target="_blank" rel="noopener" class="rss-button">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="currentColor"
            class="rss-icon"
          >
            <path
              d="M6.503 20.752c0 1.794-1.456 3.248-3.251 3.248-1.796 0-3.252-1.454-3.252-3.248 0-1.794 1.456-3.248 3.252-3.248 1.795.001 3.251 1.454 3.251 3.248zm-6.503-12.572v4.811c6.05.062 10.96 4.966 11.022 11.009h4.817c-.062-8.71-7.118-15.758-15.839-15.82zm0-3.368c10.58.046 19.152 8.594 19.183 19.188h4.817c-.03-13.231-10.755-23.954-24-24v4.812z"
            ></path>
          </svg>
          Subscribe to RSS
        </a>
        <span class="rss-tip">
          Try <a href="https://folo.is/" target="_blank" rel="noopener"
            >Folo.is</a
          > for a great RSS reading experience
        </span>
      </div>
    </section>

    <section class="research-projects">
      <h2>{t.projects}</h2>
      <div class="projects-grid">
        {
          processedProjects.map((project) => (
            <div class="project-card">
              {project.data.image && (
                <div class="project-image">
                  <img src={project.data.image} alt={project.data.title} />
                </div>
              )}
              <div class="project-content">
                <h3 class="project-title">{project.data.title}</h3>
                <div class="project-status">
                  <span class={`status-badge ${project.data.status}`}>
                    {t.status[project.data.status]}
                  </span>
                </div>
                <p>{project.data.description}</p>
                {project.data.researchers && (
                  <div class="project-researchers">
                    <strong>Researchers:</strong>{" "}
                    {project.data.researchers.join(", ")}
                  </div>
                )}
                <div class="project-links">
                  {/* External links found in content */}
                  {project.externalLinks ? (
                    project.externalLinks.map((link) => (
                      <a
                        href={link.url}
                        class="button"
                        target="_blank"
                        rel="noopener noreferrer"
                      >
                        {link.text || t.viewProject}
                      </a>
                    ))
                  ) : (
                    <a href={`/en/research/${project.slug}`} class="button">
                      {t.viewProject}
                    </a>
                  )}
                </div>
              </div>
            </div>
          ))
        }
      </div>
    </section>

    <section class="publications">
      <h2>{t.publications}</h2>
      <div class="publications-list">
        {
          publications.map((pub) => (
            <div class="publication-item">
              <h3>{pub.data.title}</h3>
              <div class="publication-meta">
                <p>
                  <strong>{t.authors}:</strong> {pub.data.authors.join(", ")}
                </p>
                {pub.data.journal && (
                  <p>
                    <strong>{t.publishedIn}:</strong> {pub.data.journal},{" "}
                    {pub.data.year}
                  </p>
                )}
                {pub.data.conference && (
                  <p>
                    <strong>{t.publishedIn}:</strong> {pub.data.conference},{" "}
                    {pub.data.year}
                  </p>
                )}
              </div>
              <p class="publication-abstract">{pub.data.abstract}</p>
              {pub.data.url && (
                <a
                  href={pub.data.url}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="button"
                >
                  View Publication
                </a>
              )}
            </div>
          ))
        }
      </div>
    </section>
  </main>
</Layout>

<style>
  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem;
  }

  .hero {
    margin-bottom: 4rem;
    text-align: center;
    padding: 3rem 2rem;
    background: linear-gradient(135deg, #e6f2ff 0%, #f0f7ff 100%);
    border-radius: 12px;
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
    position: relative;
    overflow: hidden;
  }

  .hero::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 5px;
    background: linear-gradient(90deg, #3498db, #2980b9);
  }

  h1 {
    font-size: 2.5rem;
    margin-bottom: 1rem;
    color: #2c3e50;
    position: relative;
    display: inline-block;
  }

  h1::after {
    content: "";
    position: absolute;
    bottom: -10px;
    left: 25%;
    width: 50%;
    height: 4px;
    background: linear-gradient(to right, #3498db, #7dc8ff);
    border-radius: 2px;
  }

  .lead {
    font-size: 1.25rem;
    color: #34495e;
    max-width: 800px;
    margin: 1.5rem auto 1rem;
    line-height: 1.6;
  }

  .rss-link {
    margin-top: 1.5rem;
  }

  .rss-button {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    background: linear-gradient(135deg, #f26522, #e74c0e);
    color: white;
    padding: 0.7rem 1.5rem;
    border-radius: 50px;
    text-decoration: none;
    font-weight: 600;
    transition: all 0.3s ease;
    box-shadow: 0 4px 8px rgba(242, 101, 34, 0.3);
    position: relative;
    overflow: hidden;
    z-index: 1;
  }

  .rss-button::after {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, #e74c0e, #d04009);
    opacity: 0;
    z-index: -1;
    transition: opacity 0.3s ease;
  }

  .rss-button:hover {
    transform: translateY(-3px);
    box-shadow: 0 6px 12px rgba(242, 101, 34, 0.4);
  }

  .rss-button:hover::after {
    opacity: 1;
  }

  .rss-icon {
    width: 18px;
    height: 18px;
    filter: drop-shadow(0 1px 2px rgba(0, 0, 0, 0.1));
  }

  .rss-tip {
    display: block;
    margin-top: 0.8rem;
    font-size: 0.9rem;
    color: #666;
    font-style: italic;
  }

  .rss-tip a {
    color: #f26522;
    text-decoration: underline;
    font-weight: 600;
    transition: all 0.2s;
    border-bottom: 1px dotted #f26522;
    padding-bottom: 1px;
  }

  .rss-tip a:hover {
    color: #e74c0e;
    border-bottom: 1px solid #e74c0e;
  }

  section {
    margin-bottom: 4rem;
  }

  h2 {
    font-size: 2rem;
    margin-bottom: 2rem;
    border-bottom: 2px solid #eaeaea;
    padding-bottom: 0.5rem;
  }

  .projects-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
    gap: 1.5rem;
  }

  .project-card {
    border: none;
    border-radius: 10px;
    overflow: hidden;
    box-shadow: 0 6px 12px rgba(0, 0, 0, 0.08);
    transition:
      transform 0.3s ease,
      box-shadow 0.3s ease;
    position: relative;
    background-color: #ffffff;
    border-top: 5px solid #3498db;
  }

  .project-card:hover {
    transform: translateY(-7px);
    box-shadow: 0 12px 24px rgba(0, 0, 0, 0.15);
  }

  .project-card::after {
    content: "";
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 3px;
    background: linear-gradient(90deg, #3498db, #7dc8ff);
    transform: scaleX(0);
    transform-origin: bottom right;
    transition: transform 0.5s ease;
  }

  .project-card:hover::after {
    transform: scaleX(1);
    transform-origin: bottom left;
  }

  .project-image {
    height: 180px;
    overflow: hidden;
    position: relative;
  }

  .project-image::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(0deg, rgba(52, 152, 219, 0.2), transparent);
    z-index: 1;
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .project-card:hover .project-image::before {
    opacity: 1;
  }

  .project-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s ease;
  }

  .project-card:hover .project-image img {
    transform: scale(1.05);
  }

  .project-content {
    padding: 1.5rem;
    background-color: #ffffff;
    position: relative;
  }

  .project-status {
    margin: 0.5rem 0 1rem;
  }

  .status-badge {
    display: inline-block;
    padding: 0.35rem 0.85rem;
    border-radius: 2rem;
    font-size: 0.8rem;
    font-weight: bold;
    text-transform: uppercase;
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    position: relative;
    overflow: hidden;
  }

  .status-badge::after {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(
      to right,
      rgba(255, 255, 255, 0) 0%,
      rgba(255, 255, 255, 0.3) 50%,
      rgba(255, 255, 255, 0) 100%
    );
    transform: translateX(-100%);
    transition: transform 0.6s;
  }

  .status-badge:hover::after {
    transform: translateX(100%);
  }

  .status-badge.active {
    background: linear-gradient(135deg, #20bf6b, #0fb9b1);
    color: white;
  }

  .status-badge.completed {
    background: linear-gradient(135deg, #3498db, #2980b9);
    color: white;
  }

  .status-badge.planned {
    background: linear-gradient(135deg, #f7b731, #fa8231);
    color: white;
  }

  .project-title {
    font-size: 1.2rem;
    margin-bottom: 0.5rem;
  }

  .project-researchers {
    margin: 0.8rem 0;
    font-size: 0.85rem;
  }

  .project-links {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-top: 0.8rem;
  }

  .button {
    display: inline-block;
    padding: 0.6rem 1.2rem;
    background: linear-gradient(135deg, #3498db, #2980b9);
    color: white;
    text-decoration: none;
    border-radius: 5px;
    font-weight: 500;
    transition: all 0.3s ease;
    margin-top: 1rem;
    font-size: 0.95rem;
    border: none;
    cursor: pointer;
    position: relative;
    overflow: hidden;
    box-shadow: 0 4px 6px rgba(41, 128, 185, 0.2);
    z-index: 1;
  }

  .button::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, #2980b9, #1a5fb4);
    transition: opacity 0.3s ease;
    opacity: 0;
    z-index: -1;
  }

  .button:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 12px rgba(41, 128, 185, 0.3);
  }

  .button:hover::before {
    opacity: 1;
  }

  .button:active {
    transform: translateY(0);
    box-shadow: 0 2px 4px rgba(41, 128, 185, 0.2);
  }

  .publications-list {
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  .publication-item {
    padding: 2rem;
    border: none;
    border-radius: 10px;
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
    background-color: #ffffff;
    position: relative;
    transition:
      transform 0.3s ease,
      box-shadow 0.3s ease;
    border-left: 5px solid #3498db;
  }

  .publication-item:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
  }

  .publication-item::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 0;
    background: linear-gradient(90deg, #3498db, #7dc8ff);
    opacity: 0.7;
    transition: height 0.3s ease;
    border-radius: 10px 10px 0 0;
    z-index: 0;
  }

  .publication-item:hover::before {
    height: 5px;
  }

  .publication-item h3 {
    color: #2c3e50;
    position: relative;
    padding-bottom: 0.75rem;
    margin-top: 0;
    z-index: 1;
  }

  .publication-item h3::after {
    content: "";
    position: absolute;
    bottom: 0;
    left: 0;
    width: 50px;
    height: 3px;
    background: linear-gradient(to right, #3498db, #7dc8ff);
  }

  .publication-meta {
    margin: 1.25rem 0;
    font-size: 0.95rem;
    color: #34495e;
    background-color: rgba(52, 152, 219, 0.05);
    padding: 1rem;
    border-radius: 5px;
    border-left: 3px solid #3498db;
  }

  .publication-abstract {
    margin-bottom: 1.5rem;
    line-height: 1.7;
    color: #444;
    font-size: 1.05rem;
  }
</style>
