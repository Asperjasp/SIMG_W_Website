<style>
  main {
    position: relative;
  }

  /* Hero Section */
  .hero {
    position: relative;
    padding: var(--space-32) 0 var(--space-24);
    overflow: hidden;
  }

  .hero::before {
    content: '';
    position: absolute;
    inset: 0;
    width: 100vw;
    left: 50%;
    transform: translateX(-50%);
    background: radial-gradient(ellipse at top center, rgba(249, 115, 22, 0.1) 0%, transparent 50%),
                radial-gradient(ellipse at bottom right, rgba(14, 165, 233, 0.06) 0%, transparent 60%);
    z-index: 0;
    pointer-events: none;
  }

  .hero-container {
    max-width: 1280px;
    margin: 0 auto;
    padding: 0 var(--space-6);
    position: relative;
    z-index: 1;
  }

  .hero-content {
    max-width: 800px;
    margin: 0 auto;
    text-align: center;
  }

  .badge {
    display: inline-flex;
    align-items: center;
    gap: var(--space-2);
    padding: var(--space-2) var(--space-4);
    background: rgba(249, 115, 22, 0.08);
    border: 1px solid rgba(249, 115, 22, 0.3);
    border-radius: var(--radius-full);
    font-size: var(--text-sm);
    font-weight: var(--font-medium);
    color: var(--primary-400);
    margin-bottom: var(--space-6);
  }

  .hero-title {
    font-size: clamp(2.5rem, 5vw, 4rem);
    font-weight: var(--font-black);
    line-height: 1.1;
    margin-bottom: var(--space-6);
    color: var(--text-primary);
    letter-spacing: -0.02em;
  }

  .gradient-text {
    background: linear-gradient(120deg, #f97316 0%, #ea580c 50%, #0ea5e9 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .hero-description {
    font-size: var(--text-xl);
    line-height: 1.6;
    color: var(--text-secondary);
    margin-bottom: var(--space-8);
    max-width: 700px;
    margin-left: auto;
    margin-right: auto;
  }

  /* Mission Section */
  .mission-section {
    padding: var(--space-24) 0;
  }

  .container {
    max-width: 1280px;
    margin: 0 auto;
    padding: 0 var(--space-6);
  }

  .mission-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--space-12);
    align-items: start;
  }

  .section-title {
    font-size: var(--text-4xl);
    font-weight: var(--font-bold);
    color: var(--text-primary);
    margin-bottom: var(--space-6);
    letter-spacing: -0.02em;
  }

  .mission-text {
    font-size: var(--text-lg);
    line-height: 1.7;
    color: var(--text-secondary);
    margin-bottom: var(--space-8);
  }

  .subsection-title {
    font-size: var(--text-2xl);
    font-weight: var(--font-semibold);
    color: var(--text-primary);
    margin-bottom: var(--space-6);
  }

  .topics-list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: var(--space-4);
  }

  .topics-list li {
    display: flex;
    gap: var(--space-4);
    padding: var(--space-4);
    background: var(--glass-bg);
    border: 1px solid var(--glass-border);
    border-radius: var(--radius-lg);
    backdrop-filter: var(--glass-blur);
    transition: all 0.3s ease;
  }

  .topics-list li:hover {
    border-color: var(--primary-500);
    box-shadow: 0 4px 20px rgba(249, 115, 22, 0.15);
    transform: translateX(4px);
  }

  .topic-icon {
    font-size: var(--text-2xl);
    flex-shrink: 0;
  }

  .topics-list strong {
    display: block;
    color: var(--text-primary);
    font-weight: var(--font-semibold);
    margin-bottom: var(--space-1);
  }

  .topics-list p {
    color: var(--text-secondary);
    font-size: var(--text-sm);
    margin: 0;
  }

  /* Mission Image */
  .mission-image {
    position: sticky;
    top: calc(var(--space-20) + 80px);
  }

  .image-card {
    position: relative;
    border-radius: var(--radius-2xl);
    overflow: hidden;
    background: var(--glass-bg);
    border: 1px solid var(--glass-border);
    backdrop-filter: var(--glass-blur);
    padding: var(--space-6);
  }

  .image-card img {
    width: 100%;
    height: auto;
    border-radius: var(--radius-xl);
    display: block;
  }

  /* Responsive */
  @media (max-width: 968px) {
    .mission-grid {
      grid-template-columns: 1fr;
      gap: var(--space-8);
    }

    .mission-image {
      position: relative;
      top: 0;
    }
  }

  @media (max-width: 640px) {
    .hero {
      padding: var(--space-20) 0 var(--space-16);
    }

    .hero-title {
      font-size: 2rem;
    }

    .hero-description {
      font-size: var(--text-base);
    }

    .mission-section {
      padding: var(--space-16) 0;
    }

    .section-title {
      font-size: var(--text-3xl);
    }

    .topics-list li {
      flex-direction: column;
      gap: var(--space-2);
    }
  }
</style>
