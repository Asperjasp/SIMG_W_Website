    )}

    <!-- Funding -->
    {project.data.funding && project.data.funding.length > 0 && (
      <section class="funding-section">
        <h3>Supported by</h3>
        <ul class="funding-list">
          {project.data.funding.map((funder) => (
            <li>{funder}</li>
          ))}
        </ul>
