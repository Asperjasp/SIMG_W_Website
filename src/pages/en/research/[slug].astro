---
import { getCollection } from "astro:content";
import Layout from "../../../layouts/Layout.astro";
import Header from "../../../components/Header.astro";
import type { CollectionEntry } from "astro:content";

export async function getStaticPaths() {
  const researchProjects = await getCollection(
    "research",
    ({ data }) => data.lang === "en"
  );

  return researchProjects.map((project) => ({
    params: { slug: project.slug.replace("en/", "") },
    props: { project },
  }));
}

interface Props {
  project: CollectionEntry<"research">;
}

const { project } = Astro.props;
const { Content } = await project.render();

// Format dates
const formatDate = (date: Date | undefined) => {
  if (!date) return "";
  return new Intl.DateTimeFormat("en-US", {
    year: "numeric",
    month: "long",
    day: "numeric",
  }).format(new Date(date));
};

// Get Spanish version link
const spanishSlug = project.slug.replace("en/", "");
---

<Layout title={`${project.data.title} | SIMG`}>
  <Header slot="header" />
  
  <main class="article-page">
    <!-- Breadcrumb navigation -->
    <nav class="breadcrumb">
      <a href="/en">Home</a>
      <span class="separator">â†’</span>
      <a href="/en/research">Research</a>
      <span class="separator">â†’</span>
      <span class="current">{project.data.title}</span>
    </nav>

    <!-- Article Header -->
    <header class="article-header">
      {project.data.projectType && (
        <span class="project-type">{project.data.projectType}</span>
      )}
      
      <h1 class="article-title">{project.data.title}</h1>
      
      <p class="article-description">{project.data.description}</p>

      <!-- Meta information -->
      <div class="article-meta">
        {project.data.publicationDate && (
          <time class="publication-date">
            {formatDate(project.data.publicationDate)}
          </time>
        )}
        {project.data.status && (
          <span class={`status status-${project.data.status}`}>
            {project.data.status}
          </span>
        )}
        {project.data.category && (
          <span class="category">{project.data.category}</span>
        )}
      </div>

      <!-- Tags -->
      {project.data.tags && project.data.tags.length > 0 && (
        <div class="tags">
          {project.data.tags.map((tag) => (
            <span class="tag">{tag}</span>
          ))}
        </div>
      )}

      <!-- Language switcher -->
      <div class="language-switcher">
        <span class="active">English</span>
        <span class="separator">|</span>
        <a href={`/es/research/${spanishSlug}`}>EspaÃ±ol</a>
      </div>
    </header>

    <!-- Highlights/Key Features -->
    {project.data.highlights && project.data.highlights.length > 0 && (
      <section class="highlights">
        <h2>Key Highlights</h2>
        <ul class="highlights-list">
          {project.data.highlights.map((highlight) => (
            <li>{highlight}</li>
          ))}
        </ul>
      </section>
    )}

    <!-- Main Content -->
    <article class="article-content">
      <Content />
    </article>

    <!-- Publications Section -->
    {project.data.publications && project.data.publications.length > 0 && (
      <section class="publications-section">
        <h2>Publications</h2>
        <div class="publications-grid">
          {project.data.publications.map((pub) => (
            <div class="publication-card">
              <h3 class="pub-title">{pub.title}</h3>
              
              {pub.authors && pub.authors.length > 0 && (
                <p class="pub-authors">{pub.authors.join(", ")}</p>
              )}
              
              <div class="pub-meta">
                {pub.venue && <span class="pub-venue">{pub.venue}</span>}
                {pub.date && (
                  <span class="pub-date">{formatDate(pub.date)}</span>
                )}
                {pub.type && <span class="pub-type">{pub.type}</span>}
              </div>
              
              <div class="pub-links">
                {pub.url && (
                  <a href={pub.url} target="_blank" rel="noopener" class="pub-link">
                    ğŸ“„ Paper
                  </a>
                )}
                {pub.pdf && (
                  <a href={pub.pdf} target="_blank" rel="noopener" class="pub-link">
                    ğŸ“‘ PDF
                  </a>
                )}
                {pub.arxiv && (
                  <a
                    href={`https://arxiv.org/abs/${pub.arxiv}`}
                    target="_blank"
                    rel="noopener"
                    class="pub-link"
                  >
                    arXiv
                  </a>
                )}
                {pub.doi && (
                  <a
                    href={`https://doi.org/${pub.doi}`}
                    target="_blank"
                    rel="noopener"
                    class="pub-link"
                  >
                    DOI
                  </a>
                )}
              </div>
            </div>
          ))}
        </div>
      </section>
    )}

    <!-- Resources Section -->
    {project.data.resources && project.data.resources.length > 0 && (
      <section class="resources-section">
        <h2>Resources</h2>
        <div class="resources-grid">
          {project.data.resources.map((resource) => (
            <a
              href={resource.url}
              target="_blank"
              rel="noopener"
              class="resource-card"
            >
              <div class="resource-icon">
                {resource.type === "demo" && "ğŸš€"}
                {resource.type === "code" && "ğŸ’»"}
                {resource.type === "dataset" && "ğŸ“Š"}
                {resource.type === "model" && "ğŸ¤–"}
                {resource.type === "blog" && "ğŸ“"}
                {!resource.type || resource.type === "other" ? "ğŸ”—" : ""}
              </div>
              <h3 class="resource-name">{resource.name}</h3>
              {resource.description && (
                <p class="resource-description">{resource.description}</p>
              )}
            </a>
          ))}
        </div>
      </section>
    )}

    <!-- Team/Collaborators -->
    {(project.data.researchers || project.data.collaborators) && (
      <section class="team-section">
        <h2>Team & Collaborators</h2>
        
        {project.data.researchers && project.data.researchers.length > 0 && (
          <div class="researchers">
            <h3>Researchers</h3>
            <ul class="researchers-list">
              {project.data.researchers.map((name) => (
                <li>{name}</li>
              ))}
            </ul>
          </div>
        )}
        
        {project.data.collaborators && project.data.collaborators.length > 0 && (
          <div class="collaborators">
            <h3>Collaborators</h3>
            <div class="collaborators-grid">
              {project.data.collaborators.map((collab) => (
                <div class="collaborator-card">
                  {collab.url ? (
                    <a href={collab.url} target="_blank" rel="noopener">
                      <strong>{collab.name}</strong>
                    </a>
                  ) : (
                    <strong>{collab.name}</strong>
