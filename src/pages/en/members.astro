---
import Layout from "../../layouts/Layout.astro";
import Header from "../../components/Header.astro";
import { getCollection } from "astro:content";

// Obtener miembros en inglés
const allMembers = await getCollection("members", ({ data }) => {
  return data.lang === "en";
});

// Ordenar por el campo order
const sortedMembers = allMembers.sort((a, b) => a.data.order - b.data.order);
---

<Layout title="Members | SIMG">
  <Header slot="header" />
  <main class="container">
    <section class="hero">
      <h1>Our Research Team</h1>
      <p class="lead">
        Meet the researchers, students, and collaborators working at SIMG
        Research Seminar
      </p>
    </section>

    <section class="members-grid">
      {
        sortedMembers.map((member) => (
          <a href={`/en/members/${member.slug}`} class="member-card">
            <div class="member-image">
              <img
                src={member.data.image || "/members/default-profile.jpg"}
                alt={member.data.name}
              />
            </div>
            <div class="member-info">
              <h2>{member.data.name}</h2>
              <p class="position">{member.data.position}</p>
              <p class="view-profile">View Profile →</p>
            </div>
          </a>
        ))
      }
    </section>

    <section class="join-us">
      <h2>Interested in joining our team?</h2>
      <p>
        We're always looking for talented researchers and students to join our
        seminar.
      </p>
      <a href="/en/contact" class="cta-button">Contact Us</a>
    </section>
  </main>
</Layout>

<style>
  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem;
  }

  .hero {
    text-align: center;
    margin-bottom: 3rem;
  }

  h1 {
    font-size: 2.5rem;
    margin-bottom: 1rem;
    color: #2c3e50;
  }

  .lead {
    font-size: 1.25rem;
    color: #555;
    max-width: 800px;
    margin: 0 auto;
  }

  .members-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 2rem;
    margin-bottom: 4rem;
  }

  .member-card {
    background-color: #fff;
    border-radius: 8px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    overflow: hidden;
    transition:
      transform 0.3s ease,
      box-shadow 0.3s ease;
    text-decoration: none;
    display: block;
    cursor: pointer;
  }

  .member-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
  }

  .member-image {
    height: 250px;
    overflow: hidden;
  }

  .member-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s ease;
  }

  .member-card:hover .member-image img {
    transform: scale(1.05);
  }

  .member-info {
    padding: 1.5rem;
  }

  .member-info h2 {
    font-size: 1.5rem;
    margin: 0 0 0.5rem 0;
    color: #2c3e50;
  }

  .position {
    color: #2E6DB4;
    font-size: 1rem;
    margin-bottom: 1rem;
    font-weight: 500;
  }

  .view-profile {
    color: #F4C542;
    font-size: 0.9rem;
    font-weight: 600;
    margin-top: 1rem;
    transition: transform 0.3s ease;
  }

  .member-card:hover .view-profile {
    transform: translateX(4px);
  }

  .join-us {
    text-align: center;
    background-color: #f9f9f9;
    padding: 3rem 2rem;
    border-radius: 8px;
    margin-top: 2rem;
  }

  .join-us h2 {
    font-size: 2rem;
    margin-bottom: 1rem;
    color: #2c3e50;
  }

  .join-us p {
    margin-bottom: 2rem;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
  }

  .cta-button {
    background-color: #F4C542;
    color: #0C1A26;
    border: none;
    padding: 0.75rem 1.5rem;
    border-radius: 4px;
    font-size: 1rem;
    font-weight: bold;
    text-decoration: none;
    transition: all 0.3s;
  }

  .cta-button:hover {
    background-color: #d97706;
    transform: translateY(-2px);
    box-shadow: 0 8px 16px rgba(244, 197, 66, 0.25);
  }

  @media (max-width: 768px) {
    .members-grid {
      grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
    }

    .member-image {
      height: 200px;
    }
  }
</style>
