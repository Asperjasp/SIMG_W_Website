---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Members">
  <main>
    <h1>Our Members</h1>
    <section class="members-grid">
      <div class="member-card">
        <img src="/members/member1.jpg" alt="Member 1" />
        <h2>John Doe</h2>
        <p>Research Lead</p>
        <a href="/members/john-doe">View Profile</a>
      </div>
      <div class="member-card">
        <img src="/members/member2.jpg" alt="Member 2" />
        <h2>Jane Smith</h2>
        <p>PhD Student</p>
        <a href="/members/jane-smith">View Profile</a>
      </div>
      <div class="member-card">
        <img src="/members/member3.jpg" alt="Member 3" />
        <h2>Peter Jones</h2>
        <p>Postdoc Researcher</p>
        <a href="/members/peter-jones">View Profile</a>
      </div>
      <!-- Add more member cards as needed -->
    </section>
  </main>
</Layout>

<style>
  main {
    padding: 2rem;
    text-align: center;
  }

  h1 {
    margin-bottom: 2rem;
    color: #333;
  }

  .members-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 2rem;
    max-width: 1200px;
    margin: 0 auto;
  }

  .member-card {
    background-color: #fff;
    border-radius: 8px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    padding: 1.5rem;
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    transition: transform 0.2s ease-in-out;
  }

