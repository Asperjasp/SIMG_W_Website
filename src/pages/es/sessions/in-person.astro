<style>
  main {
    padding: 2rem;
    max-width: 900px;
    margin: 0 auto;
    font-family: "Arial", sans-serif;
    color: #333;
  }

  h1 {
    text-align: center;
    margin-bottom: 3rem;
    color: #2c3e50;
    position: relative;
    display: inline-block;
    left: 50%;
    transform: translateX(-50%);
  }

  h1::after {
    content: "";
    position: absolute;
    bottom: -10px;
    left: 25%;
    width: 50%;
    height: 4px;
    background: linear-gradient(to right, #3498db, #7dc8ff);
    border-radius: 2px;
  }

  .session-section {
    margin-bottom: 3rem;
    background: linear-gradient(to bottom, #ffffff, #f0f7ff);
    padding: 2.5rem;
    border-radius: 12px;
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.08);
    border-left: 5px solid #3498db;
    position: relative;
    overflow: hidden;
  }

  .session-section::before {
    content: "";
    position: absolute;
    top: 0;
    right: 0;
    width: 150px;
    height: 150px;
    background: radial-gradient(
      circle,
      rgba(52, 152, 219, 0.1) 0%,
      rgba(255, 255, 255, 0) 70%
    );
    border-radius: 50%;
    z-index: 0;
  }

  h2 {
    color: #2980b9;
    margin-bottom: 1.5rem;
    font-size: 1.9rem;
    position: relative;
    display: inline-block;
    padding-bottom: 10px;
  }

  h2::after {
    content: "";
    position: absolute;
    bottom: 0;
    left: 0;
    width: 60%;
    height: 3px;
    background: linear-gradient(to right, #3498db, transparent);
    border-radius: 3px;
  }

  h3 {
    color: #2c3e50;
    margin: 1.5rem 0 0.8rem;
    font-size: 1.5rem;
  }

  p {
    line-height: 1.7;
    margin-bottom: 1.2rem;
    font-size: 1.05rem;
    color: #34495e;
  }

  ul {
    margin-left: 1.5rem;
    margin-bottom: 1.8rem;
    line-height: 1.7;
  }

  li {
    margin-bottom: 0.8rem;
    position: relative;
    padding-left: 0.5rem;
  }

  li::marker {
    color: #3498db;
    font-size: 1.2em;
  }

  .location-info {
    margin-top: 2rem;
    padding: 1.5rem;
    border-left: 4px solid #3498db;
    background: linear-gradient(
      135deg,
      rgba(52, 152, 219, 0.15),
      rgba(125, 200, 255, 0.1)
    );
    border-radius: 8px;
    position: relative;
    box-shadow: 0 3px 8px rgba(0, 0, 0, 0.05);
  }

  .location-info::before {
    content: "";
    position: absolute;
    top: -15px;
    left: 20px;
    font-size: 24px;
    background-color: white;
    border-radius: 50%;
    padding: 5px;
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
  }

  .upcoming-session {
    padding: 2rem;
    border: none;
    border-radius: 16px;
    background: linear-gradient(135deg, #f0f7ff 0%, #e0eafc 100%);
    box-shadow: 0 8px 24px rgba(52, 152, 219, 0.12);
    position: relative;
    overflow: hidden;
    border-top: 5px solid #3498db;
    display: flex;
    flex-direction: column;
    margin-bottom: 2rem;
    transition: box-shadow 0.3s, background 0.3s;
  }
  .upcoming-session:hover {
    box-shadow: 0 12px 32px rgba(52, 152, 219, 0.18);
    background: linear-gradient(135deg, #e0eafc 0%, #f0f7ff 100%);
  }

  .upcoming-session::after {
    content: "";
    position: absolute;
    bottom: 0;
    left: 0;
    height: 4px;
    width: 100%;
    background: linear-gradient(90deg, #3498db, #7dc8ff);
    transform: scaleX(0);
    transform-origin: left;
    transition: transform 0.5s ease;
  }

  .upcoming-session:hover::after {
    transform: scaleX(1);
  }

  .upcoming-session h3 {
    color: #3498db;
    margin-top: 0;
    margin-bottom: 1.5rem;
    padding-bottom: 10px;
    border-bottom: 1px solid rgba(52, 152, 219, 0.2);
    font-size: 1.5rem;
  }
  .friday-time {
    color: #1769aa;
    font-weight: 800;
    font-size: 1.25rem;
    letter-spacing: 0.5px;
    margin-bottom: 0.5rem;
    margin-top: 0.5rem;
    text-shadow: 0 2px 8px rgba(44,62,80,0.08);
  }
  .friday-time span {
    color: #0a3d62;
    font-weight: 900;
    background: #e0eafc;
    padding: 0.15em 0.5em;
    border-radius: 6px;
    margin-left: 0.5em;
    box-shadow: 0 2px 8px rgba(44,62,80,0.08);
  }

  .map-container {
    margin-top: 2rem;
    background: linear-gradient(to bottom, #ffffff, #f0f7ff);
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.08);
    border-top: 4px solid #3498db;
  }

  .map-container h3 {
    padding: 1.5rem 1.5rem 0.5rem 1.5rem;
    margin: 0;
    color: #2980b9;
  }

  .google-map {
    width: 100%;
    border-radius: 0 0 12px 12px;
    overflow: hidden;
  }

  .google-map iframe {
    display: block;
    width: 100%;
    transition: transform 0.3s ease;
  }

  .google-map iframe:hover {
    transform: scale(1.01);
  }

  .location-details {
    display: flex;
    align-items: center;
    margin-top: 0.5rem;
    padding: 0 1.5rem 1.5rem;
  }

  .location-icon {
    color: #3498db;
    font-size: 1.2rem;
    margin-right: 0.5rem;
  }

  .directions-link {
    display: inline-block;
    margin-top: 1rem;
    margin-left: 1.5rem;
    margin-bottom: 1.5rem;
    padding: 0.6rem 1.2rem;
    background-color: #3498db;
    color: white;
    text-decoration: none;
    border-radius: 6px;
    font-weight: 500;
    transition: all 0.3s ease;
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
  }

  .directions-link:hover {
    background-color: #2980b9;
    transform: translateY(-2px);
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.15);
  }

  .session-image {
    width: 100%;
    max-height: 450px;
    object-fit: cover;
    border-radius: 8px;
    margin-bottom: 1.5rem;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    transition:
      transform 0.3s ease,
      box-shadow 0.3s ease;
  }

  .session-image:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.15);
  }
</style>
