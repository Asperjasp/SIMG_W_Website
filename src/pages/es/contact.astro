<style>
  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem;
  }

  .hero {
    text-align: center;
    margin-bottom: 3rem;
  }

  h1 {
    font-size: 2.5rem;
    margin-bottom: 1rem;
    background: linear-gradient(120deg, #F4C542 0%, #2E6DB4 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .lead {
    font-size: 1.25rem;
    color: var(--text-secondary);
  }

  .contact-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 2rem;
    margin-bottom: 3rem;
  }

  @media (max-width: 768px) {
    .contact-grid {
      grid-template-columns: 1fr;
    }
  }

  .contact-info,
  .contact-form {
    background: linear-gradient(135deg, rgba(18, 35, 52, 0.95) 0%, rgba(12, 26, 38, 0.98) 100%);
    border: 1px solid rgba(244, 197, 66, 0.2);
    backdrop-filter: blur(10px);
    border-radius: var(--radius-2xl);
    padding: 2rem;
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
  }

  h2 {
    font-size: 1.8rem;
    margin-bottom: 1.5rem;
    background: linear-gradient(120deg, #F4C542 0%, #2E6DB4 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    border-bottom: 2px solid rgba(244, 197, 66, 0.2);
    padding-bottom: 0.5rem;
  }

  .info-item {
    display: flex;
    margin-bottom: 1.5rem;
    padding: 1rem;
    background: rgba(46, 109, 180, 0.1);
    border-radius: var(--radius-lg);
    border: 1px solid rgba(46, 109, 180, 0.2);
  }

  .icon {
    font-size: 1.5rem;
    margin-right: 1rem;
    min-width: 40px;
    text-align: center;
  }

  h3 {
    font-size: 1.2rem;
    margin-bottom: 0.5rem;
    color: #F4C542;
    font-weight: var(--font-semibold);
  }

  .info-item p {
    color: var(--text-secondary);
    margin: 0.25rem 0;
  }

  .info-item a {
    color: #2E6DB4;
    text-decoration: none;
    transition: color 0.3s ease;
  }

  .info-item a:hover {
    color: #F4C542;
  }

  .form-group {
    margin-bottom: 1.5rem;
  }

  label {
    display: block;
    margin-bottom: 0.5rem;
    font-weight: 500;
    color: var(--text-primary);
  }

  input,
  textarea {
    width: 100%;
    padding: 0.75rem;
    background: rgba(46, 109, 180, 0.1);
    border: 1px solid rgba(244, 197, 66, 0.2);
    border-radius: var(--radius-lg);
    font-size: 1rem;
    color: var(--text-primary);
    transition: all 0.3s ease;
  }

  input:focus,
  textarea:focus {
    outline: none;
    border-color: #F4C542;
    background: rgba(46, 109, 180, 0.15);
    box-shadow: 0 0 0 3px rgba(244, 197, 66, 0.1);
  }

  input::placeholder,
  textarea::placeholder {
    color: var(--text-secondary);
    opacity: 0.6;
  }

  .button {
    background: linear-gradient(135deg, #F4C542 0%, #d97706 100%);
    color: #0C1A26;
    border: none;
    border-radius: var(--radius-full);
    padding: 0.75rem 2rem;
    font-size: 1rem;
    font-weight: bold;
    cursor: pointer;
    transition: all 0.3s;
    box-shadow: 0 4px 16px rgba(244, 197, 66, 0.3);
    width: 100%;
  }

  .button:hover {
    background: linear-gradient(135deg, #d97706 0%, #F4C542 100%);
    transform: translateY(-2px);
    box-shadow: 0 8px 24px rgba(244, 197, 66, 0.4);
  }

  .button:disabled {
    opacity: 0.6;
    cursor: not-allowed;
    transform: none;
  }

  #form-status {
    padding: 1rem;
    border-radius: var(--radius-lg);
    font-weight: 500;
  }

  #form-status.success {
    background: rgba(95, 163, 106, 0.2);
    border: 1px solid rgba(95, 163, 106, 0.4);
    color: #5FA36A;
  }

  #form-status.error {
    background: rgba(239, 68, 68, 0.2);
    border: 1px solid rgba(239, 68, 68, 0.4);
    color: #ef4444;
  }

  .social-media {
    text-align: center;
    margin-top: 3rem;
  }

  .social-links {
    display: flex;
    justify-content: center;
    flex-wrap: wrap;
    gap: 1rem;
    margin-top: 1.5rem;
  }

  .social-link {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-decoration: none;
    color: #333;
    transition:
      transform 0.3s,
      color 0.3s;
    padding: 1rem;
    border-radius: 8px;
    width: 100px;
  }

  .social-link:hover {
    transform: translateY(-5px);
  }

  .social-link svg {
    width: 32px;
    height: 32px;
    margin-bottom: 0.5rem;
  }

  .social-link span {
    font-size: 0.9rem;
  }

  .linkedin:hover {
    color: #0077b5;
  }
  .youtube:hover {
    color: #ff0000;
  }
  .twitter:hover {
    color: #1da1f2;
  }
  .instagram:hover {
    color: #e1306c;
  }
  .github:hover {
    color: #333;
  }
  .linktree:hover {
    color: #43e660;
  }

  .map-container {
    margin: 1.5rem 0;
    background: rgba(46, 109, 180, 0.1);
    border-radius: var(--radius-lg);
    overflow: hidden;
    border: 1px solid rgba(46, 109, 180, 0.2);
  }

  .google-map {
    width: 100%;
    border-radius: var(--radius-lg);
    overflow: hidden;
  }

  .google-map iframe {
    display: block;
    width: 100%;
    transition: transform 0.3s ease;
  }

  .directions-link {
    display: inline-block;
    margin: 1rem;
    padding: 0.6rem 1.2rem;
    background: linear-gradient(135deg, #F4C542 0%, #d97706 100%);
    color: #0C1A26;
    text-decoration: none;
    border-radius: var(--radius-full);
    font-weight: 600;
    transition: all 0.3s ease;
    box-shadow: 0 2px 8px rgba(244, 197, 66, 0.3);
  }

  .directions-link:hover {
    background: linear-gradient(135deg, #d97706 0%, #F4C542 100%);
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(244, 197, 66, 0.4);
  }

  /* Light Mode Styles */
  :global(html.light-mode) .lead,
  :global(body.light-mode) .lead {
    color: rgba(0, 0, 0, 0.7);
  }

  :global(html.light-mode) .contact-info,
  :global(body.light-mode) .contact-info,
  :global(html.light-mode) .contact-form,
  :global(body.light-mode) .contact-form {
    background: linear-gradient(135deg, rgba(255, 255, 255, 0.95) 0%, rgba(248, 248, 248, 0.98) 100%);
    border: 1px solid rgba(0, 0, 0, 0.1);
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
  }

  :global(html.light-mode) .info-item,
  :global(body.light-mode) .info-item {
    background: rgba(46, 109, 180, 0.05);
    border: 1px solid rgba(46, 109, 180, 0.15);
  }

  :global(html.light-mode) .info-item p,
  :global(body.light-mode) .info-item p {
    color: rgba(0, 0, 0, 0.7);
  }

  :global(html.light-mode) .info-item a,
  :global(body.light-mode) .info-item a {
    color: #2E6DB4;
  }

  :global(html.light-mode) .info-item a:hover,
  :global(body.light-mode) .info-item a:hover {
    color: #d97706;
  }

  :global(html.light-mode) label,
  :global(body.light-mode) label {
    color: rgba(0, 0, 0, 0.85);
  }

  :global(html.light-mode) input,
  :global(body.light-mode) input,
  :global(html.light-mode) textarea,
  :global(body.light-mode) textarea {
    background: rgba(46, 109, 180, 0.05);
    border: 1px solid rgba(0, 0, 0, 0.15);
    color: rgba(0, 0, 0, 0.9);
  }

  :global(html.light-mode) input:focus,
  :global(body.light-mode) input:focus,
  :global(html.light-mode) textarea:focus,
  :global(body.light-mode) textarea:focus {
    border-color: #d97706;
    background: rgba(46, 109, 180, 0.08);
    box-shadow: 0 0 0 3px rgba(217, 119, 6, 0.1);
  }

  :global(html.light-mode) input::placeholder,
  :global(body.light-mode) input::placeholder,
  :global(html.light-mode) textarea::placeholder,
  :global(body.light-mode) textarea::placeholder {
    color: rgba(0, 0, 0, 0.5);
  }

  :global(html.light-mode) .map-container,
  :global(body.light-mode) .map-container {
    background: rgba(46, 109, 180, 0.05);
    border: 1px solid rgba(46, 109, 180, 0.15);
  }
</style>

<script define:vars={{ EMAILJS_PUBLIC_KEY, EMAILJS_SERVICE_ID, EMAILJS_TEMPLATE_ID }}>
  // Debug: Check if env variables are loaded
  console.log('EmailJS Config Check:');
  console.log('Public Key:', EMAILJS_PUBLIC_KEY ? '‚úì Loaded' : '‚úó Missing');
  console.log('Service ID:', EMAILJS_SERVICE_ID ? '‚úì Loaded' : '‚úó Missing');
  console.log('Template ID:', EMAILJS_TEMPLATE_ID ? '‚úì Loaded' : '‚úó Missing');

  // Load EmailJS SDK
  const script = document.createElement('script');
  script.src = 'https://cdn.jsdelivr.net/npm/@emailjs/browser@4/dist/email.min.js';
  script.onload = () => {
    console.log('EmailJS SDK loaded successfully');
    // @ts-ignore
    emailjs.init(EMAILJS_PUBLIC_KEY);
    console.log('EmailJS initialized');
  };
  script.onerror = () => {
    console.error('Failed to load EmailJS SDK');
  };
  document.head.appendChild(script);

  const contactForm = document.getElementById("contact-form");
  const submitBtn = document.getElementById("submit-btn");
  const btnText = submitBtn?.querySelector('.btn-text');
  const btnLoader = submitBtn?.querySelector('.btn-loader');
  const formStatus = document.getElementById("form-status");

  if (contactForm) {
    contactForm.addEventListener("submit", async (e) => {
      e.preventDefault();
      console.log('Form submitted, processing...');

      // Disable button and show loader
      submitBtn.disabled = true;
      btnText.style.display = 'none';
      btnLoader.style.display = 'inline';
      formStatus.textContent = '';
      formStatus.className = '';

      try {
        // Get form data
        const formData = new FormData(contactForm);
        const name = formData.get('from_name');
        const email = formData.get('reply_to');
        const subject = formData.get('subject');
        const message = formData.get('message');

        console.log('Form data:', { name, email, subject, messageLength: message.length });

        // Prepare template params
        const templateParams = {
          from_name: name,
          reply_to: email,
          subject: subject,
          message: message,
          to_emails: 'alesanchezpov@gmail.com, robertgomez.datascience@gmail.com'
        };

        console.log('Sending email with params:', templateParams);
        console.log('Using Service ID:', EMAILJS_SERVICE_ID);
        console.log('Using Template ID:', EMAILJS_TEMPLATE_ID);

        // @ts-ignore
        const response = await emailjs.send(
          EMAILJS_SERVICE_ID,
          EMAILJS_TEMPLATE_ID,
          templateParams
        );

        console.log('EmailJS Response:', response);

        // Success
        formStatus.textContent = '‚úÖ ¬°Mensaje enviado exitosamente! Te responderemos pronto.';
        formStatus.className = 'success';
        contactForm.reset();

      } catch (error) {
        // Error
        console.error('EmailJS Error Details:', error);
        console.error('Error type:', typeof error);
        console.error('Error message:', error.message || error);
        console.error('Error stack:', error.stack);
        
        formStatus.textContent = '‚ùå Error al enviar el mensaje. Por favor, intenta enviarnos un correo directo.';
        formStatus.className = 'error';
      } finally {
        // Re-enable button
        submitBtn.disabled = false;
        btnText.style.display = 'inline';
        btnLoader.style.display = 'none';
      }
    });
  } else {
    console.error('Contact form not found!');
  }
</script>
