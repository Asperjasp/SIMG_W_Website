---
import Layout from "../../layouts/Layout.astro";
import Header from "../../components/Header.astro";
import SponsorCarousel from "../../components/SponsorCarousel.astro";
import { getCollection } from "astro:content";

// Get latest research projects
const researchProjects = await getCollection("research", (entry) => entry.data.lang === 'es');
const latestResearch = researchProjects
  .sort((a, b) => {
    const aTime = a.data.startDate ? a.data.startDate.getTime() : 0;
    const bTime = b.data.startDate ? b.data.startDate.getTime() : 0;
    return bTime - aTime;
  })
  .slice(0, 3);
