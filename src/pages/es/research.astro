---
import { getCollection } from "astro:content";
import Layout from "../../layouts/Layout.astro";
import Header from "../../components/Header.astro";

// 1. Obtener todos los proyectos de investigaciÃ³n en espaÃ±ol
const researchProjects = await getCollection("research", ({ data }) => data.lang === 'es');

// 2. Formatear los items
const allItems = researchProjects.map((project) => {
  // Remove the "es/" prefix from slug to avoid duplication
  const cleanSlug = project.slug.replace('es/', '');
  return {
    title: project.data.title,
    date: project.data.startDate,
    description: project.data.description,
    url: `/es/research/${cleanSlug}/`,
    tags: project.data.tags || [],
    category: project.data.category,
  };
});

// 3. Ordenar items por fecha (solo items con fecha vÃ¡lida)
const sortedItems = allItems
  .filter(item => item.date != null)
  .sort((a, b) => new Date(b.date!).getTime() - new Date(a.date!).getTime());

// 4. Definir categorÃ­as para el filtrado
const categories = ["Research", "Products", "Partnerships & Outreach"] as const;
const categoryTranslations: Record<typeof categories[number], string> = {
  "Research": "InvestigaciÃ³n",
  "Products": "Productos",
  "Partnerships & Outreach": "Alianzas y DivulgaciÃ³n"
};
---

<Layout title="InvestigaciÃ³n | SIMG">
  <Header slot="header" />
  <main>
    <!-- Hero Section -->
    <section class="hero">
      <div class="hero-container">
        <div class="hero-content">
          <span class="badge">ğŸ“š InvestigaciÃ³n</span>
          <h1 class="hero-title">
            Ãšltimas <span class="gradient-text">Noticias SIMG</span>
          </h1>
