---
import Layout from "../../layouts/Layout.astro";
import Header from "../../components/Header.astro";
import { getCollection } from "astro:content";

// Obtener miembros en español
const allMembers = await getCollection("members", ({ data }) => {
  return data.lang === "es";
});

// Ordenar por el campo order
const sortedMembers = allMembers.sort((a, b) => a.data.order - b.data.order);
---

<Layout title="Miembros | SIMG">
  <Header slot="header" />
  <main class="container">
    <section class="hero">
      <h1>Nuestro Equipo de Investigación</h1>
      <p class="lead">
        Conoce a los investigadores, estudiantes y colaboradores que trabajan en
        el Seminario de Investigación SIMG
      </p>
    </section>

    <section class="members-grid">
      {
        sortedMembers.map((member) => (
          <a href={`/es/members/${member.id.replace('es/', '').replace('.md', '')}`} class="member-card">
            <div class="member-image">
              <img
                src={member.data.image || "/members/default-profile.jpg"}
                alt={member.data.name}
              />
            </div>
            <div class="member-info">
              <h2>{member.data.name}</h2>
              <p class="position">{member.data.position}</p>
              <p class="view-profile">Ver Perfil →</p>
            </div>
          </a>
        ))
      }
    </section>

    <section class="join-us">
      <h2>¿Interesado en unirte a nuestro equipo?</h2>
      <p>
        Siempre estamos buscando investigadores y estudiantes talentosos para
        unirse a nuestro seminario.
      </p>
      <a href="/es/contact" class="cta-button">Contáctanos</a>
    </section>
  </main>
</Layout>

<style>
  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem;
  }

  .hero {
    text-align: center;
    margin-bottom: 3rem;
  }

  h1 {
    font-size: 2.5rem;
    margin-bottom: 1rem;
    background: linear-gradient(120deg, #F4C542 0%, #2E6DB4 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .lead {
    font-size: 1.25rem;
    color: var(--text-secondary);
    max-width: 800px;
    margin: 0 auto;
  }

  .members-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 2rem;
    margin-bottom: 4rem;
  }

  .member-card {
    background: linear-gradient(135deg, rgba(18, 35, 52, 0.95) 0%, rgba(12, 26, 38, 0.98) 100%);
    border: 1px solid rgba(244, 197, 66, 0.2);
    backdrop-filter: blur(10px);
    border-radius: var(--radius-2xl);
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
    overflow: hidden;
    transition:
      transform 0.3s ease,
      box-shadow 0.3s ease,
      border-color 0.3s ease;
    text-decoration: none;
    display: block;
    cursor: pointer;
  }

  .member-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 16px 48px rgba(244, 197, 66, 0.3);
    border-color: rgba(244, 197, 66, 0.5);
  }

  .member-image {
    height: 250px;
    overflow: hidden;
    position: relative;
  }

  .member-image::after {
    content: '';
    position: absolute;
    inset: 0;
    background: linear-gradient(180deg, transparent 0%, rgba(12, 26, 38, 0.3) 100%);
    pointer-events: none;
  }

  .member-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s ease;
  }

  .member-card:hover .member-image img {
    transform: scale(1.08);
  }

  .member-info {
    padding: 1.5rem;
  }

  .member-info h2 {
    font-size: 1.5rem;
    margin: 0 0 0.5rem 0;
    color: var(--text-primary);
    font-weight: var(--font-bold);
  }

  .position {
    color: #2E6DB4;
    font-size: 1rem;
    margin-bottom: 1rem;
    font-weight: 500;
  }

  .view-profile {
    color: #F4C542;
    font-size: 0.9rem;
    font-weight: 600;
    margin-top: 1rem;
    transition: transform 0.3s ease;
  }

  .member-card:hover .view-profile {
    transform: translateX(4px);
  }

  .join-us {
    text-align: center;
    background: linear-gradient(135deg, rgba(18, 35, 52, 0.95) 0%, rgba(12, 26, 38, 0.98) 100%);
    border: 1px solid rgba(244, 197, 66, 0.2);
    backdrop-filter: blur(10px);
    padding: 3rem 2rem;
    border-radius: var(--radius-2xl);
    margin-top: 2rem;
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
  }

  .join-us h2 {
    font-size: 2rem;
    margin-bottom: 1rem;
    background: linear-gradient(120deg, #F4C542 0%, #2E6DB4 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .join-us p {
    margin-bottom: 2rem;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
    color: var(--text-secondary);
  }

  .cta-button {
    background: linear-gradient(135deg, #F4C542 0%, #d97706 100%);
    color: #0C1A26;
    border: none;
    padding: 0.75rem 2rem;
    border-radius: var(--radius-full);
    font-size: 1rem;
    font-weight: bold;
    text-decoration: none;
    transition: all 0.3s;
    display: inline-block;
    box-shadow: 0 4px 16px rgba(244, 197, 66, 0.3);
  }

  .cta-button:hover {
    background: linear-gradient(135deg, #d97706 0%, #F4C542 100%);
    transform: translateY(-2px);
    box-shadow: 0 8px 24px rgba(244, 197, 66, 0.4);
  }

  @media (max-width: 768px) {
    .members-grid {
      grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
    }

    .member-image {
      height: 200px;
    }
  }
</style>
