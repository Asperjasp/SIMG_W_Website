---
// Archivo index.astro en la raíz - redirige al idioma adecuado
import { getLanguageFromURL } from "../utils/i18n.js";

// Detectar el idioma preferido del navegador o usar inglés por defecto
const lang = getLanguageFromURL(Astro.url.pathname) || "en";
const destination = lang === "es" ? "/es/" : "/en/";
---

<meta http-equiv="refresh" content={`0;url=${destination}`} />

<script define:vars={{ destination }}>
  window.location.href = destination;
</script>

<style>
  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem;
  }

  h1 {
    font-size: 2.5rem;
    margin-bottom: 1rem;
  }

  .cta-button {
    background-color: #0077cc;
    color: white;
    border: none;
    padding: 0.75rem 1.5rem;
    border-radius: 4px;
    font-weight: bold;
    cursor: pointer;
    transition: background-color 0.3s;
  }

  .cta-button:hover {
    background-color: #005fa3;
  }
</style>
