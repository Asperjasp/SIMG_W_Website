<style>
  footer.social-media {
    text-align: center;
    margin-top: 3rem;
    padding: 2rem 0;
    background-color: #f9f9f9;
    border-top: 1px solid #eaeaea;
  }

  h2 {
    font-size: 1.8rem;
    margin-bottom: 1.5rem;
    color: #2c3e50;
  }

  .social-links {
    display: flex;
    justify-content: center;
    flex-wrap: wrap;
    gap: 1rem;
    margin-top: 1.5rem;
    max-width: 1200px;
    margin-left: auto;
    margin-right: auto;
  }

  .social-link {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-decoration: none;
    color: #333;
    transition:
      transform 0.3s,
      color 0.3s;
    padding: 1rem;
    border-radius: 8px;
    width: 100px;
  }

  .social-link:hover {
    transform: translateY(-5px);
  }

  .social-link svg {
    width: 32px;
    height: 32px;
    margin-bottom: 0.5rem;
  }

  .social-link span {
    font-size: 0.9rem;
  }

  .linkedin:hover {
    color: #0077b5;
  }
  .youtube:hover {
    color: #ff0000;
  }
  .twitter:hover {
    color: #1da1f2;
  }
  .instagram:hover {
    color: #e1306c;
  }
  .github:hover {
    color: #333;
  }
  .linktree:hover {
    color: #43e660;
  }
  .rss:hover {
    color: #f26522;
  }

  .social-link-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 120px;
  }

  .rss-reader-tip {
    margin-top: 0.5rem;
    font-size: 0.75rem;
  }

  .rss-reader-tip a {
    color: #666;
    text-decoration: none;
    font-style: italic;
    transition: color 0.2s;
  }

  .rss-reader-tip a:hover {
    color: #f26522;
    text-decoration: underline;
  }
</style>
